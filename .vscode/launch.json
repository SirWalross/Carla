    ],
    "inputs": [
        {
            "id": "get_ip",
            "type": "command",
            "command": "shellCommand.execute",
            "args": {
                "command": "cat /etc/resolv.conf | grep nameserver | cut -b 12-"
            }
        }
    ]
}